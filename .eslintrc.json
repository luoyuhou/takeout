{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [ "warn", 2 ],
    "no-unused-vars": 0,
    "accessor-pairs": 2,
    "no-multiple-empty-lines": [1, {"max": 1}],
    "semi":["error","always"],
    "no-trailing-spaces": 2,
    "require-atomic-updates": "off",
    "quotes": "error"
  }
}